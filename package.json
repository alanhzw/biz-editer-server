{
  "name": "foo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node bin/www",
    "dev": "nodemon bin/www",
    "prd-dev": "cross-env NODE_ENV=prd_dev pm2 start bin/pm2-prd-dev.config.js",
    "prd": "cross-env NODE_ENV=production NODE_LOG_DIR=/tmp/editor-server ENABLE_NODE_LOG=YES pm2 start bin/pm2-prd.config.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "test:local": "cross-env NODE_ENV=test_local jest --runInBand  --passWithNoTests --colors --forceExit",
    "test:remote": "cross-env NODE_ENV=test_remote jest --runInBand  --passWithNoTests --colors --forceExit"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "debug": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-jwt": "^4.0.3",
    "koa-logger": "^3.2.0",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.0",
    "mongoose": "^6.4.0",
    "mysql2": "^2.3.3",
    "pug": "^3.0.2",
    "redis": "^3.0.2",
    "require-all": "^3.0.0",
    "sequelize": "^6.21.0",
    "simple-git": "^3.7.1",
    "supertest": "^6.2.3"
  },
  "devDependencies": {
    "commitlint": "^17.0.2",
    "commitlint-config-cz": "^0.13.3",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.2",
    "nodemon": "^1.19.1",
    "prettier": "^2.7.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIY_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "npm run test:local"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}